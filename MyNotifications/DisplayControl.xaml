<UserControl x:Class="SimpleNotifications.DisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleNotifications"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200" Background="Transparent">

    <Border Name="WindowBorder" CornerRadius="3,3,3,3" BorderThickness="1, 1, 1, 1" Margin="5" VerticalAlignment="Center"
            BorderBrush="#007AFF" Background="#F5F5F5"
            MinHeight="40" MinWidth="100" MaxHeight="500" MaxWidth="600">
        <TextBlock Name="TextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" TextWrapping="Wrap" Foreground="#007AFF" />
    </Border>

</UserControl>
